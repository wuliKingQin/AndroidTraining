<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tool="http://schemas.android.com/tools">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/icon_iv"
        android:layout_width="64dp"
        android:layout_height="32dp"
        tool:src="@mipmap/tab_cart_check_vip"
        app:layout_constraintVertical_chainStyle="packed"
        app:layout_constraintBottom_toTopOf="@+id/tab_name_tv"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>
    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tab_name_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tool:text="分享"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/icon_iv"
        app:layout_constraintBottom_toBottomOf="parent"/>
    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:padding="1dp"
        android:text="99"
        android:singleLine="true"
        android:ellipsize="end"
        android:gravity="center"
        android:textSize="8sp"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:background="@drawable/shape_message_bg"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="2dp"
        app:layout_constraintTop_toTopOf="@+id/icon_iv"
        app:layout_constraintRight_toRightOf="@+id/icon_iv"/>
</androidx.constraintlayout.widget.ConstraintLayout>